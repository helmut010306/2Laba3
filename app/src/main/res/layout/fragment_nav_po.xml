<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nav_po">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="415dp"
        android:layout_height="244dp"
        android:src="@drawable/po"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="417dp"
        android:layout_height="501dp"
        android:layout_marginBottom="84dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="141dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/android" />

                <TextView
                    android:id="@+id/txtandr"
                    android:layout_width="271dp"
                    android:layout_height="72dp"
                    android:text="@string/android_studio_android"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="140dp"
                    android:layout_height="54dp"
                    android:src="@drawable/netbens" />

                <TextView
                    android:id="@+id/txtapche"
                    android:layout_width="272dp"
                    android:layout_height="match_parent"
                    android:text="@string/netbeans"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="138dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/eclipse" />

                <TextView
                    android:id="@+id/txtEclipse"
                    android:layout_width="273dp"
                    android:layout_height="90dp"
                    android:text="@string/eclipse_ide_for_java" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgphotosh"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/xd_logo" />

                <TextView
                    android:id="@+id/txtAdobe"
                    android:layout_width="273dp"
                    android:layout_height="54dp"
                    android:text="@string/adobe_xd" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="280dp"
                    android:layout_height="49dp"
                    android:layout_weight="1"

                    app:srcCompat="@drawable/photoshop" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/abode_photoshop" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    app:srcCompat="@drawable/illus" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/adobe_illustrator" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="6dp"
                    android:layout_height="87dp"
                    android:layout_weight="1"

                    app:srcCompat="@drawable/visual" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="140dp"
                    android:layout_height="87dp"
                    android:layout_weight="1"
                    android:text="@string/mvsc" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>